---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"section">, HTMLAttributes<"div"> {
  as?: "section" | "div";
  colorScheme?: "light" | "dark";
}

const { as = "section", colorScheme = "light", class: className, ...rest } = Astro.props;

const Tag = as || "section";

const classes = ["section", colorScheme, className];
---

<Tag {...rest} class:list={classes} data-color-scheme={colorScheme}>
  <slot />
</Tag>
